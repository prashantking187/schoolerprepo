<project name="Telephone"  default="war" >

	<property name="project.title" value="Cabinet Tracker Project"></property>
	<property name="web.dir" value="E:/Work Stuff/HOME/Telephone"></property>
	
	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
		<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="build/classes"/>
		<mkdir dir="dist" />
	</target>
	<target name="compile" depends="init" >
		<javac destdir="build/classes" debug="true" srcdir="src">
		<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	
	<target name="war" depends="compile" >
		<war destfile="cabinetTracker.war" webxml="${web.dir}/WebContent/WEB-INF/web.xml">
		   <fileset dir="${web.dir}/WebContent" />
		  <classes dir="build/classes" />
		   </war>
	</target>
  	<target name="clean">
		<delete dir="dist" />
		<delete dir="build" />
	</target>
</project>